# =========================
#  Database Configuration
# =========================
POSTGIS_HOST=localhost
POSTGIS_PORT=5432
POSTGIS_DB=postgis_35_SIH
POSTGIS_USER=postgres
POSTGIS_PASSWORD=your_postgres_password_here

# =========================
#  Redis Configuration
# =========================
REDIS_URL=redis://localhost:6379

